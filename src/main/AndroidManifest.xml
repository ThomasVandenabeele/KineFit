<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.myfirstapp">
    <application
        android:theme="@style/_KineFit"
        android:configChanges="keyboardHidden|orientation"
        android:label="@string/app_name"
        android:icon="@drawable/icon">
        <activity android:name="LoginActivity"
                    android:label="KineFit">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />
                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
        </activity>

        <activity
            android:name=".DashboardActivity"
            android:label="Start Menu" >
        </activity>

        <activity
            android:name="NewLogging"
            android:label="Diary">

        </activity>

        <activity
            android:name="StepActivity"
            android:label="Count steps" >
        </activity>

        <activity android:name=".DiaryActivity"
            android:label="Diary">

        </activity>

        <receiver android:name="com.example.myfirstapp.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".RegisterStepsService"
            android:exported="false"/>
    </application>
    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="@string/step_detector" android:required="false"/>
    <uses-feature android:name="@string/step_counter" android:required="false"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>
